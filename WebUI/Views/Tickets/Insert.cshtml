@model WebUI.Models.TicketsInsertViewModel

@{
    ViewData["Title"] = "Kayıt Ekleme";
}


@using (Html.BeginForm("Insert", "Tickets", FormMethod.Post))
{
    <div class="card-body">
        <div class="form-group">
            <strong for="exampleInputEmail1">Konu: </strong>
            <input asp-for="Subject" type="text" class="form-control" placeholder="Konu giriniz...">
        </div>
        <div class="form-group">
            <strong for="exampleInputPassword1">Detay: </strong>
            <input asp-for="Body" type="text" class="form-control" placeholder="Konu detayını giriniz...">
        </div>
        <div class="form-group">
            <strong for="exampleInputPassword1">Kayıt Tipi: </strong>
            <select id="ticketType" asp-for="TicketTypeId" class="form-control" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                <option selected="selected" value="0">Seçiniz...</option>
                <option value="2">Problem</option>
                <option value="1">Bilgi Talebi</option>
            </select>
        </div>
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}