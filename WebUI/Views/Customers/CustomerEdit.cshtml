@model WebUI.Models.CustomersCustomerEditViewModel

@{
    ViewData["Title"] = "Müşteri Düzenleme";
}


@using (Html.BeginForm("CustomerEdit", "Customers", FormMethod.Post))
{
<div class="card-body">
    <div class="form-group">
        <input asp-for="Customer.Id" type="text" class="form-control" hidden>
    </div>
    <div class="form-group">
        <strong for="exampleInputEmail1">Vergi Numarası: </strong>
        <input asp-for="Customer.TaxNo" type="text" class="form-control" placeholder="Vergi numaranızı giriniz...">
    </div>
    <div class="form-group">
        <strong for="exampleInputPassword1">Müşteri Adı: </strong>
        <input asp-for="Customer.Title" type="text" class="form-control" placeholder="Müşteri adını giriniz...">
    </div>
    <div class="form-group">
        <strong for="exampleInputPassword1">Adres: </strong>
        <input asp-for="Customer.Address" type="text" class="form-control" placeholder="Müşteri adresini giriniz...">
    </div>
</div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}